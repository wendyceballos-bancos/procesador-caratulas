
import streamlit as st
import pandas as pd
import numpy as np
import base64
import io
import os
from datetime import datetime
import warnings
import re

warnings.filterwarnings('ignore')

# Configuraci√≥n de la p√°gina
st.set_page_config(
    page_title="üè¶ Vaciado de Car√°tulas Bancarias",
    page_icon="üè¶",
    layout="wide",
    initial_sidebar_state="expanded"
)

